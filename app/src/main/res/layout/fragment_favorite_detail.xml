<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
    >

        <TextView
            android:id="@+id/city_favorite_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:shadowColor="#00ccff"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:text="London"
            android:textSize="35sp"
        />

        <TextView
            android:id="@+id/time_day_favorite_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Saturday"
            android:textSize="18sp"
            android:textStyle="bold"
        />

        <TextView
            android:id="@+id/week_favorite_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juni 28"
            android:textSize="18sp"
            android:textStyle="bold"
        />

        <ImageView
            android:id="@+id/weather_image_favorite_detail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
        />

        <TextView
            android:id="@+id/day_favorite_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:text="15C"
            android:textSize="48sp"
        />

        <TextView
            android:id="@+id/night_favorite_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:text="15C"
            android:textSize="24sp"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:textStyle="bold"
        >

            <TextView
                android:id="@+id/humidity_favorite_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity 100"
                android:textSize="20sp"
                android:textStyle="italic"
            />

            <TextView
                android:id="@+id/pressure_favorite_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure 1024"
                android:textSize="20sp"
                android:textStyle="italic"
            />

            <TextView
                android:id="@+id/wind_speed_favorite_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind 6 h"
                android:textSize="20sp"
                android:textStyle="italic"
            />

        </LinearLayout>

    </LinearLayout>
</ScrollView>